<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>


    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.MyButton1" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton2" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton3" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton4" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton5" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor5</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="AppTheme.MyButton6" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor6</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton7" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor7</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton8" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton9" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor9</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton10" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myColor10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton11" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/bl</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyButton12" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_blue_color</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="OverlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <!--styles for internet dialog-->

    <style name="df_dialog_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="df_dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/df_transparent_black_background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="homeHeading" parent="viewParent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="learnhubTitleText" parent="parent">
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--styles for internet dialog ends here-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="parent.TextLayout">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!--    New Button-->
    <style name="BluePrimaryButton" parent="Theme.Material3.Light">
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layout_constraintWidth_min">@dimen/defaultBtnWidth</item>
        <item name="layout_constraintHeight_min">55dp</item>
    </style>

    <style name="MyTheme" parent="MaterialAlertDialog.Material3">
        <item name="backgroundColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>

    </style>


</resources>