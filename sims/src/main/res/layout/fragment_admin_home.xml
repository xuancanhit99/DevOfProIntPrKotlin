<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/fragment_admin_home"
        tools:context=".ui.fragments.admin.AdminHomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/welcome"
                        android:textAllCaps="true"
                        android:textSize="25sp"
                        app:fontFamily="@font/my_font"
                        app:layout_constraintEnd_toStartOf="@+id/iv_ad_menu_avt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tv_ad_menu_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"

                        android:fontFamily="@font/my_font"
                        app:layout_constraintEnd_toStartOf="@+id/iv_ad_menu_avt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_ad_menu_avt"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/graduated"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_ad_menu_avt">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/myColor2"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <Button
                                android:id="@+id/btn_ad_my_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:icon="@drawable/ic_baseline_person_pin_24"
                                android:drawableTint="#fff"
                                android:paddingStart="9dp"
                                android:paddingEnd="7dp"
                                android:text="@string/my_profile"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/myColor7"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <Button
                                android:id="@+id/btn_ad_add_student"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:icon="@drawable/ic_baseline_bookmark_24"
                                android:drawableTint="#fff"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="@string/online_mirea"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/myColor1"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <Button
                                android:id="@+id/btn_ad_update_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:icon="@drawable/ic_baseline_edit_note_24"
                                android:drawableTint="#fff"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="@string/edit_profile"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/myColor10"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <Button
                                android:id="@+id/btn_ad_list_student"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:icon="@drawable/ic_list"
                                android:drawableTint="#fff"
                                android:paddingStart="17dp"
                                android:paddingEnd="20dp"
                                android:text="@string/list_student"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="175dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/myColor8"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <Button
                                android:id="@+id/btn_ad_menu_chat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:drawableStart="@drawable/ic_baseline_message_24"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:icon="@drawable/ic_chat"
                                android:drawableTint="#fff"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="@string/chat"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/myColor3"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <Button
                                android:id="@+id/btn_ad_logout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="10dp"
                                app:icon="@drawable/ic_baseline_logout_24"
                                android:drawableTint="#fff"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="@string/logout"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>